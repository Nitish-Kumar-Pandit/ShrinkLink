{
  "name": "shrinklink-fullstack",
  "version": "1.0.0",
  "description": "ShrinkLink - Full Stack URL Shortener",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "setup": "node setup-env.js",
    "setup:env": "node setup-env.js",
    "setup:render": "node setup-for-render.js",
    "build": "npm run install:all && cd FRONTEND && npm run build",
    "build:backend": "cd BACKEND && npm install",
    "build:frontend": "cd FRONTEND && npm install && npm run build",
    "start": "node server.js",
    "start:backend": "cd BACKEND && npm start",
    "start:frontend": "cd FRONTEND && npm start",
    "dev": "cd BACKEND && npm run dev",
    "dev:frontend": "cd FRONTEND && npm run dev",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "install:all": "cd BACKEND && npm install && cd ../FRONTEND && npm install",
    "postinstall": "npm run install:all",
    "test:backend": "curl http://localhost:5000/health",
    "test:frontend": "curl http://localhost:5173"
  },
  "keywords": ["url-shortener", "render", "fullstack"],
  "author": "ShrinkLink",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "hpp": "^0.2.3",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  }
}
