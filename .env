# ========================================
# SHRINKLINK APPLICATION ENVIRONMENT VARIABLES
# ========================================
# This file contains all environment variables for both frontend and backend
# Copy this file and rename to .env for local development
# For production, set these variables in your hosting platform

# ========================================
# BACKEND ENVIRONMENT VARIABLES
# ========================================

# Database Configuration
# MongoDB Atlas connection string with your credentials
MONGO_URI=mongodb+srv://compilex-admin:CompileX2024@compilex.jhtzhys.mongodb.net/shrinklink?retryWrites=true&w=majority&appName=CompileX

# JWT Configuration
# Use a strong, random secret key (minimum 32 characters)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_123456789

# Server Configuration
PORT=3000
NODE_ENV=development

# Application URLs
# Base URL for generating short URLs (backend URL)
APP_URL=http://localhost:3000

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:5174

# Frontend Domain (for generating short URLs in production)
FRONTEND_DOMAIN=https://sl.nitishh.in

# Security Configuration
# Number of bcrypt salt rounds for password hashing
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
# Time window in milliseconds (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# URL Expiration Configuration
# Default expiration in days (leave empty for no default expiration)
DEFAULT_URL_EXPIRY_DAYS=365

# Logging Configuration
LOG_LEVEL=info

# Production Security Settings
HELMET_CSP_ENABLED=true
CORS_ORIGIN=http://localhost:5174

# Database Connection Pool Settings
DB_MAX_POOL_SIZE=20
DB_MIN_POOL_SIZE=10

# Email Configuration (for future features)
# SMTP settings for sending emails
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Analytics Configuration (for future features)
GOOGLE_ANALYTICS_ID=

# Redis Configuration (for future caching features)
REDIS_URL=

# ========================================
# FRONTEND ENVIRONMENT VARIABLES
# ========================================
# Note: Frontend variables must be prefixed with VITE_ to be accessible in the browser

VITE_API_URL=http://localhost:3000
VITE_APP_NAME=ShrinkLink
VITE_APP_VERSION=1.0.0
