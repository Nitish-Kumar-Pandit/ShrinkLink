# Production Environment Variables for Backend
# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/shrinklink

# JWT Configuration  
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-change-this

# Server Configuration
PORT=10000
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-app.vercel.app

# Application URL (for generating short URLs)
APP_URL=https://your-backend-url.onrender.com

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# URL Expiration (optional - in days)
DEFAULT_URL_EXPIRY_DAYS=365

# Logging
LOG_LEVEL=info

# Production Security
HELMET_CSP_ENABLED=true
CORS_ORIGIN=https://your-app.vercel.app

# Database Connection Pool
DB_MAX_POOL_SIZE=20
DB_MIN_POOL_SIZE=10
